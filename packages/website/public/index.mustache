<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" href="/g/personalidol/assets/favicon.ico?{{{__CACHE_BUST}}}">
    <link rel="manifest" href="/g/personalidol/manifest.json?{{{__CACHE_BUST}}}">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <meta name="theme-color" content="#000000">
    <title>Personal Idol</title>
    <style>
      ::selection {
        background-color: white;
        color: black;
      }

      html, body {
        touch-action: none;
        -webkit-user-select: none;
        user-select: none;
      }

      body {
        -moz-osx-font-smoothing: grayscale;
        -webkit-font-smoothing: antialiased;
        background-color: black;
        margin: 0;
        overflow: hidden;
      }

      body.bootstrap-fatal-error {
        background-color: darkred;
      }

      #canvas,
      #ui-root {
        left: 0;
        position: absolute;
        top: 0;
        will-change: height, width;
      }

      #ui-root {
        pointer-events: none;
      }

      .ui-placeholder-label {
        bottom: 2.4rem;
        color: white;
        font-family: sans-serif;
        font-size: 1rem;
        font-variant: small-caps;
        letter-spacing: 0.1ch;
        left: 1.6rem;
        line-height: 1rem;
        position: absolute;
        text-align: center;
        text-transform: lowercase;
      }
    </style>
  </head>
  <body>
    <noscript>
      <style>
        body {
          background-color: darkred;
        }

        #ui-label-loading {
          display: none;
        }

        #ui-root {
          bottom: 0;
          right: 0;
        }
      </style>
    </noscript>
    <div id="game-root">
      <canvas id="canvas"></canvas>
      <div id="ui-root">
        <pi-progress-manager-state class="ui-placeholder">
          <div class="ui-placeholder-label" id="ui-label-loading">
            Loading ...
          </div>
          <noscript>
            <div class="ui-placeholder-label" id="ui-label-js-disabled">
              Error: You need to JavaScript to run this application.
            </div>
          </noscript>
        </pi-progress-manager-state>
      </div>
    </div>
    <script>(function () {
      const uiRoot = document.getElementById("ui-root");

      uiRoot.addEventListener("error", function (evt) {
        document.body.classList.add("bootstrap-fatal-error");

        uiRoot.style.bottom = "0";
        uiRoot.style.right = "0";
        uiRoot.innerHTML = `
          <div class="ui-placeholder">
            <div class="ui-placeholder-label">
              Error: ${evt.detail.message}
            </div>
          </div>
        `;
      });
    }());</script>
    <script src="/g/personalidol/lib/index.js?{{{__CACHE_BUST}}}" type="module"></script>
  </body>
</html>
