{
  "name": "distant-divinity",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "dependencies": {
    "babel-plugin-relay": "^2.0.0-rc.1",
    "core-js": "^2.5.7",
    "i18next": "^12.0.0",
    "immutable": "^4.0.0-rc.12",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.11",
    "mainloop.js": "^1.0.4",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-relay": "^1.7.0",
    "react-scripts": "2.0.5",
    "twig": "^1.12.0"
  },
  "devDependencies": {
    "cssnano": "^4.0.5",
    "flow-bin": "^0.85.0",
    "node-sass": "^4.9.0",
    "postcss": "^7.0.2",
    "postcss-cli": "^6.0.0",
    "websocket": "^1.0.26"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "scripts": {
    "build": "npm run sass:build && react-scripts build",
    "css:postbuild": "postcss < public/index.css > public/index.css.tmp && mv public/index.css.tmp public/index.css",
    "flow:start": "npm run flow start",
    "flow:watch": "fswatch ./src | xargs -n1 -I{} yarn run flow status",
    "postbuild": "npm run css:postbuild",
    "sass:build": "./node_modules/.bin/node-sass -r ./scss -o ./public",
    "sass:watch": "./node_modules/.bin/node-sass -r -w ./scss -o ./public",
    "start": "react-scripts start",
    "test": "react-scripts test --env=jsdom"
  }
}
